@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezarvasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezarvasyon Girişi</div>
						</div>
						<input type="hidden" asp-for="BokkingID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Rezarvasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="Date" id="Date">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezarvasyon Güncelle </button>
						</div>
					</div> <!-- Bu div etiketi eksik olabilir -->
				</form>
			</div>
		</div>
	</div>
</div>




