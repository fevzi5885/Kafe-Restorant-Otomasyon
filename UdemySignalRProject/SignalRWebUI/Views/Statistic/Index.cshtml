        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7284/signalrhub").build();

                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    }, 1000);

                }).catch((err) => { console.log(err) });

                connection.on("ReceiveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });
                connection.on("ReceiveProductCount", (value2) => {
                    $("#productcount").text(value2);
                });
                connection.on("ReceiverActiveCategoryCount", (value3) => {
                    $("#activecategorycount").text(value3);
                });
                connection.on("ReceiverPassiveCategoryCount", (value4) => {
                    $("#passivecategorycount").text(value4);
                });
                connection.on("ReceiverProductCountByCategoryNameHamburger", (value5) => {
                    $("#productcountbycategorynamehamburger").text(value5);
                });
                connection.on("ReceiverProductCountByCategoryNameDrink", (value6) => {
                    $("#productcountbycategorynamedrink").text(value6);
                });
                connection.on("ReceiverTProductPriceAvg", (value7) => {
                    $("#productpriceavg").text(value7);
                });
                connection.on("ReceiverProductNameBYPriceMax", (value8) => {
                    $("#productnamebypricemax").text(value8);
                });
                connection.on("ReceiverProductNameBYPriceMin", (value9) => {
                    $("#productnamebypricemin").text(value9);
                });
                connection.on("ReceiverProductIntPriceByHamburger", (value10) => {
                    $("#productıntpricebyhamburger").text(value10);
                });
                connection.on("ReceiverTotalOrderCount", (value11) => {
                    $("#totalordercount").text(value11);
                });
                connection.on("ReceiverActiveOrderCount", (value12) => {
                    $("#activeordercount").text(value12);
                });
                connection.on("ReceiverLastOrderPrice", (value13) => {
                    $("#lastorderprice").text(value13);
                });
                connection.on("ReceiverTotalMoneyCaseAmount", (value14) => {
                    $("#totalmoneycaseamount").text(value14);
                });
                connection.on("ReceiverTodayTotalPrice", (value15) => {
                    $("#todaytotalprice").text(value15);
                });
                 connection.on("ReceiverManuTableCount", (value16) => {
                     $("#manutablecount").text(value16);
                 });
            });
        </script>


