@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Müşteri Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müşteri Yorum Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Adınızı ve Soyadınızı Girin</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Resim Dosya Yolu Girin</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Comment">Müşteri Yorumunu Girin</label>
								<input type="text" class="form-control" asp-for="Comment" id="Comment">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Yorumu Kaydet </button>
						</div>
					</div> <!-- Bu div etiketi eksik olabilir -->
				</form>
			</div>
		</div>
	</div>
</div>


